{
  "manifest_version": 3,
  "name": "My test Side Panel Extensions",
  "description": "Shows how to display the same side panel only on saatva.com using the Side Panel API.",
  "version": "1.0",
  "icons": {
    "16": "public/images/icon-16.png",
    "48": "public/images/icon-48.png",
    "128": "public/images/icon-128.png"
  },
  "permissions": [
    "sidePanel", "tabs", "activeTab", "scripting", "storage"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "background": {
    "service_worker": "dist/serviceWorker.bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.saatva.com/*"],
      "js": ["dist/contentScript.bundle.js"]
    }
  ],
  "side_panel": {
    "default_path": "public/sidepanel.html"
  },
  "action": {
    "default_title": "Click to open panel"
  }
}
